{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "rootDirs": [
            "generated",
            "./src"
        ],
        "baseUrl": "./src",
        "paths": {
            "*": [
              "*",
              "generated/*",
              "./src/*",
              "node_modules/*"
            ]
        },
        "sourceMap": true,
        "declaration": true,
        "noImplicitReturns": true,
        "lib": [
            "dom",
            "es2016",
            "es2017.object"
        ],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "jsx": "react",
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
